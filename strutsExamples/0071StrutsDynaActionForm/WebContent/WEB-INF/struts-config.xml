<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "struts-config_1_2.dtd">
<struts-config>
<form-beans>
<form-bean type="org.apache.struts.action.DynaActionForm" name="loginForm">

<form-property type="java.lang.String" name="userName"/>

<form-property type="java.lang.String" name="password"/>

</form-bean>

</form-beans>
<action-mappings>
<action type="com.jlc.action.LoginActions" name="loginForm" path="/login">

<forward name="success" path="/jsp/success.jsp"/>

<forward name="failure" path="/jsp/failure.jsp"/>

</action>

</action-mappings>

<message-resources parameter="myapp.ApplicationResources"/>

</struts-config>