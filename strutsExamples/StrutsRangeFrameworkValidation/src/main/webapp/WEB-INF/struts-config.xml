<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "struts-config_1_2.dtd">
<struts-config>
	<form-beans>
		<form-bean type="com.indian.form.EmployeeForm" name="employeeform" />

	</form-beans>
	<action-mappings>
		<action type="com.indian.action.EmployeeAction" name="employeeform"
			input="/jsp/employee.jsp" validate="true" path="/login">
			<forward name="success" path="/jsp/success.jsp" />
			<forward name="error" path="/jsp/error.jsp" />
		</action>
	</action-mappings>
	<message-resources parameter="myapp.ApplicationResources" />
	 
	 <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="pathnames"
			value="/WEB-INF/validator-rules.xml, /WEB-INF/validator.xml" />
	</plug-in>

</struts-config>
