<?xml version="1.0" encoding="UTF-8" ?>
<struts-config>

	<form-beans>
		<form-bean name="loginForm" type="com.clust.form.LoginForm"/>
	</form-beans>
	
	<action-mappings> 
		<action path="/login" type="com.clust.action.LoginAction" name="loginForm" 
			 validate="true" input="/jsp/login.jsp">
			<forward name="success" path="/jsp/success.jsp" />
			<forward name="failure" path="/jsp/failure.jsp" />
		</action>
	</action-mappings> 
	 <message-resources parameter="com.myapp.Resources"/>
	 
	 <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="pathnames"
			value="/WEB-INF/validator-rules.xml, /WEB-INF/validator.xml" />
	</plug-in>

</struts-config> 