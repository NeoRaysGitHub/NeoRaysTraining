<!DOCTYPE struts-config PUBLIC
       "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
       "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
	<form-beans>
		<form-bean name="registerForm" type="com.neo.form.RegisterForm">
		</form-bean>
	</form-beans>
	<action-mappings>
		<action path="/register" name="registerForm" type="com.neo.action.RegisterAction">
			<forward name="Success" path="/WEB-INF/jsp/success.jsp"></forward>
			<forward name="Failure" path="/WEB-INF/jsp/failure.jsp"></forward>
		</action>
		<action path="/select" type="com.neo.action.GetEmployee">
		<forward name="success" path="/WEB-INF/jsp/selectSuccess.jsp"></forward>
		<forward name="failure" path="/WEB-INF/jsp/failure.jsp"></forward>
		</action>
	</action-mappings>
	<message-resources parameter="com/neo/resources/Message"></message-resources>
</struts-config>       