<?xml version="1.0" encoding="UTF-8" ?>
<struts-config>

	<form-beans>
		<form-bean name="loginForm" type="com.form.SearchForm"/>
	</form-beans>
	
	<action-mappings> 
		<action path="/search"  type="com.action.SearchAction" name="loginForm" scope="request"
				validate="true" input="/jsp/login.jsp">
            <forward name="success" path="/jsp/success.jsp"/>
            <forward name="failure" path="/jsp/failure.jsp"/>
       </action>
	</action-mappings> 
	 <message-resources parameter="myappp.ApplicationResources"/>

</struts-config> 