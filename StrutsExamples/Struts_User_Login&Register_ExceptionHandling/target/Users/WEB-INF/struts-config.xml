<!DOCTYPE struts-config PUBLIC
       "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
       "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
 <form-beans>
  <form-bean name="userForm" type="com.neo.form.UserForm"></form-bean>
  <form-bean name="userRegisterForm" type="com.neo.form.UserRegisterForm"></form-bean>
 </form-beans>
 <action-mappings>
 <action path="/user" type="com.neo.action.HyperLinks">
  <forward name="login" path="/WEB-INF/jsp/login.jsp"></forward>
  <forward name="register" path="/WEB-INF/jsp/register.jsp"></forward>
  <forward name="index" path="/WEB-INF/jsp/index.jsp"></forward>
 </action>
 <action path="/userLogin" name="userForm" type="com.neo.action.UserLogin" validate="true" input="/WEB-INF/jsp/login.jsp">
 <forward name="Success" path="/WEB-INF/jsp/success.jsp"></forward> 
 <forward name="Failure" path="/WEB-INF/jsp/login.jsp"></forward>
 </action>
 <action path="/userRegister" name="userRegisterForm" type="com.neo.action.UserRegister" validate="true" input="/WEB-INF/jsp/register.jsp">
 <forward name="Success" path="/WEB-INF/jsp/success.jsp"></forward>
 </action>
 </action-mappings>
 <message-resources parameter="com/neo/resources/Message"></message-resources>
</struts-config>       