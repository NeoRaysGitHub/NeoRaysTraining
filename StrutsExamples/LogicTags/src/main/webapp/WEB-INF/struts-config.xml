<?xml version="1.0" encoding="UTF-8" ?>
<struts-config>

	<form-beans>
		<form-bean name="phoneForm" type="com.neo.form.PhoneForm"/>
	</form-beans>
	
	<action-mappings> 
		<action path="/searchbyphone" type="com.neo.action.PhoneAction" name="phoneForm" 
			 validate="true" input="/jsp/searchByPhone.jsp">
			<exception key="errors.search.phone.noresults" type="com.neo.exception.UserNotFoundException" 
				path="/jsp/searchByPhone.jsp"/>
            <forward name="byphone" path="/jsp/searchByPhone.jsp"/>
		</action>
	</action-mappings> 
	<message-resources parameter="com.myapp.ApplicationResources"/>
	 
</struts-config> 