<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "struts-config_1_2.dtd">
<struts-config>

	<form-beans>
		<form-bean name="loginForm" type="com.cluster.form.LoginForm"/>
		<form-bean name="details" type="com.cluster.form.DetailsForm"/>
		</form-beans>
	
	<action-mappings> 
		<action path="/login" type="com.cluster.action.LoginAction" name="loginForm" validate="true" input="/jsp/login.jsp" scope="request">
		<forward name="success" path="/jsp/employeedetails.jsp"/>
		<forward name="failure" path="/jsp/failure.jsp"/>
        </action>
	</action-mappings> 
 <message-resources parameter="myapp.ApplicationResources"/>
  
	 <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="pathnames"
			value="/WEB-INF/validator-rules.xml, /WEB-INF/validator.xml" />
	</plug-in>
 
</struts-config> 