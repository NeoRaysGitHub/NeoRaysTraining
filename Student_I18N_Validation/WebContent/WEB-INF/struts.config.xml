<!DOCTYPE struts-config PUBLIC
       "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
       "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
 	<form-beans>
 	 <form-bean name="studentForm" type="com.cluster.form.StudentForm"></form-bean>
 	</form-beans>
 	<action-mappings>
 	 <action path="/reg" name="studentForm" type="com.cluster.action.StudentAction" validate="true" input="/WEB-INF/jsp/index.jsp">
 	  <forward name="Success" path="/WEB-INF/jsp/success.jsp"></forward>
 	  <forward name="Failure" path="/WEB-INF/jsp/failure.jsp"></forward>
 	  <forward name="Error" path="/WEB-INF/jsp/error.jsp"></forward>
 	  <forward name="DBERROR" path="/WEB-INF/jsp/dberror.jsp"></forward>
 	 </action>
 	 <action path="/locale" type="com.cluster.action.LanguageAction">
 	  <forward name="indexpage" path="/WEB-INF/jsp/index.jsp"></forward>
 	 </action>
 	</action-mappings>
 	 <message-resources parameter="com/cluster/resources/Message"></message-resources>
 	 
</struts-config>       